<image name="thumbnail-gamecarousel" extra="true">
<path>{game:thumbnail}</path>
<visible>true</visible>
<pos>0.61 0.50</pos>
<origin>0.5 0.5</origin>
<maxSize>0.22 .550</maxSize>
